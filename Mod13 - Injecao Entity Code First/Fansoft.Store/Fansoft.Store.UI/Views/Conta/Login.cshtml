@model LoginVM

@{
    ViewBag.Title = "Login";
}



<div class="row justify-content-center">
    <div class="col-sm-8">

        <h2>@ViewBag.Title</h2>

        <form method="post">

            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", autofocus = "" })
                @Html.ValidationMessageFor(x => x.Email, null)
            </div>

            <div class="form-group">
                <label>Senha</label>
                @Html.PasswordFor(x => x.Senha, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Senha, null)
            </div>

            <button class="btn btn-secondary">Entrar</button>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index","Home")">Cancelar</a>
        </form>

    </div>
</div>


@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
}