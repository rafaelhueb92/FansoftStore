@model  List<Produto>
@{
    ViewBag.Title = "Listagem de Produtos";
}

<h2>@ViewBag.Title</h2>

<div style="margin-bottom:15px">
    <a class="btn btn-primary" href="Produtos/AddEdit">Adicionar Produto</a>
</div>

<table class="table table-striped table-hover table-responsive-sm">
    <thead class="table-primary">
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Data do Cadastro</th>
            <th>Valor</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.TipoProduto.Nome</td>
                <td>@item.DataCadastro</td>
                <td>@item.Valor.ToString("C2")</td>
                <td>
                    <a class="btn btn-sm btn-success" href="Produtos/AddEdit/@item.Id">Editar</a>
                    <button class="btn btn-sm btn-danger" onclick="excluirProd('@item.Id','@item.Nome')">Excluir</button>
                </td>
            </tr>
        }

    </tbody>

</table>

<script>
    function excluirProd(id, nome) {
        alert('Vc está excluindo o produto ' + nome);
    }
</script>